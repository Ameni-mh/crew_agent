{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run SOLA AI (Uvicorn)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.main:app",
                "--reload",
                "--reload-dir",
                "src",
                "--host",
                "0.0.0.0",
                "--port",
                "7000",
                "--log-level",
                "debug"
            ],
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
    ]
}